<%= form_with model: @post || Post.new, data: { controller: 'reset-form', action: 'turbo:submit-end->reset-form#reset' } do |form| %>
  <%= form.rich_text_area :content,
                     placeholder: "What's on your mind? Drag and drop images are supported.",
                     required: true,
                     id: "#{@post.present? ? dom_id(@post) : dom_id(Post.new)}_form" %>
  <%= form.submit %>
<% end %>