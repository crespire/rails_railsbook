<div class="l-registration__links">
  <div class="l-registration__main">
    <%- if controller_name != 'sessions' %>
      <%= link_to "Log in", new_session_path(resource_name), class: 'link' %>
    <% end %>
  </div>

  <div class="l-registration__new">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <% pretty_provider = provider == :google_oauth2 ? :google : provider %>
          <%= button_to "Log in with #{OmniAuth::Utils.camelize(pretty_provider)}", omniauth_authorize_path(resource_name, provider), method: :post, data: { turbo: false }, class: 'link link--no-bold' %>
        <% end %>
      <% end %>
      <br>
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'link' %>
    <% end %>
  </div>

  <div class="l-registration__support">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'link' %>
    <% end %>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'link' %>
    <% end %>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'link' %>
    <% end %>
  </div>
</div>